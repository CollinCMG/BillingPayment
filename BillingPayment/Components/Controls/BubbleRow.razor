@using BillingPayment.Services
@using BillingPayment.Models

@* Parameters *@
@code {
    [Parameter] public InvoiceSummary? Summary { get; set; }
    [Parameter] public InvoiceService InvoiceService { get; set; } = default!;
}

@if (Summary is not null)
{
    <div class="summary-cards-container">
        <Bubble Title="Prior Balance" Value="@InvoiceService.FormatCurrency(Summary.PriorBalance)" />
        <Bubble Title="Charges & Fees" Value="@InvoiceService.FormatCurrency(Summary.ChargesAndFees)" />
        <Bubble Title="Payments & Adjustments" Value="@InvoiceService.FormatCurrency(Summary.PaymentsAndAdjustments)" />
        <Bubble Title="Account Balance" Value="@InvoiceService.FormatCurrency(Summary.AccountBalance)" />
        <Bubble Title="Minimum Due" Value="@InvoiceService.FormatCurrency(Summary.MinimumDue)" />
    </div>
}